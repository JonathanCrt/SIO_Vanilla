{% extends 'base.html.twig' %}

{% block title %} {% endblock %}



{% block body %}

    <link rel="stylesheet" href="{{ asset('assets/css/ListCompany.css') }}">

    <div class="tm-header">
        <div class="container-fluid">
            <div class="tm-header-inner">
                <a href="/" class="navbar-brand tm-site-name titleApp">Vanilla</a>

                <!-- navbar -->
                <nav class="navbar tm-main-nav">

                    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse"
                            data-target="#tmNavbar">
                        &#9776;
                    </button>

                    <div class="collapse navbar-toggleable-sm" id="tmNavbar">
                        <ul class="nav navbar-nav">
                            <li class="nav-item">
                                <a href="{{ path('indexProfesseur') }}" class="nav-link">Accueil</a>
                            </li>
                            <li class="nav-item active">
                                <a href="{{ path('listeEntrepriseProfesseur') }}" class="nav-link">Liste des entreprises</a>
                            </li>

                            <li class="nav-item">
                                <a href="{{ path('listeUser') }}" class="nav-link">Liste des eleve</a>
                            </li>
                            <li class="nav-item">
                                <a href="/aide" class="nav-link">Aide</a>
                            </li>
                        </ul>
                    </div>

                </nav>



            </div>
        </div>
    </div>
    </br>
<div class="container">
    <table class="table table-hover table-warning">
        <thead>
        <tr>
            <th>Entreprise</th>
            <th>Ville</th>
            <th>Code Postal</th>
            <th>Adresse</th>
            <th>email</th>
            <th>Téléphone</th>
            <th>Activité</th>
            <th>Modification</th>
            <th>Liste des Tuteur</th>
            <th>Localisation</th>



        </tr>
        </thead>
        <tbody>
        {% for i in listeEntreprise %}
            <tr>
                <td>{{  i.nomEntreprise }}</td>
                <td>{{  i.villeEntreprise}}</td>
                <td>{{  i.cpEntreprise }}</td>
                <td>{{  i.adressseEntreprise }}</td>
                <td>{{  i.mailEntreprise }}</td>
                <td>{{  i.telEntreprise }}</td>
                <td>{{  i.activiteEntreprise }}</td>
                <td><a href="{{ path('updateEntreprise', {'id': i.id}) }}"><span class="icon fa fa-edit"></span></a></td>
                <td><a href="{{ path('listeTuteur', {'id': i.id}) }}"><span class="icon fa fa-users"></span></a></td>
                <td><a href="https://www.google.fr/maps/place/{{i.adressseEntreprise }}"><span class="icon fas fa-map-marker-alt"></span></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        {% endblock %}
