                            </li>
                        </ul>
                    </div>

                </nav>


            </div>
        </div>
    </div>
    </br>
<div class="container">
    <table class="table table-hover table-warning">
        <thead>
        <tr>
            <th>Entreprise</th>
            <th>Ville</th>
            <th>Code Postal</th>
            <th>Adresse</th>
            <th>email</th>
            <th>Téléphone</th>
            <th>Activité</th>


        </tr>
        </thead>
        <tbody>
        {% for i in listeEntreprise %}
            <tr>
                <td>{{  i.nomEntreprise }}</td>
                <td>{{  i.villeEntreprise}}</td>
                <td>{{  i.cpEntreprise }}</td>
                <td>{{  i.adressseEntreprise }}</td>
                <td>{{  i.mailEntreprise }}</td>
                <td>{{  i.telEntreprise }}</td>
                <td>{{  i.activiteEntreprise }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="4"></td>
            <td>Total : 0</td>
        </tr>
        </tfoot>
    </table>
</div>
        {% endblock %}
