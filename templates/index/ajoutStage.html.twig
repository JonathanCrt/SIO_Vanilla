{% extends 'base.html.twig' %}

{% block title %}{% endblock %}



{% block body %}



    {{ form_start(form) }}
    <div class="tm-header">
        <div class="container-fluid">
            <div class="tm-header-inner">
                <a href="#" class="navbar-brand tm-site-name titleApp">Vanilla</a>

                <!-- navbar -->
                <nav class="navbar tm-main-nav">

                    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse"
                            data-target="#tmNavbar">
                        &#9776;
                    </button>

                    <div class="collapse navbar-toggleable-sm" id="tmNavbar">
                        <ul class="nav navbar-nav">
                            <li class="nav-item ">
                                <a href="/" class="nav-link">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a href="/listeEntreprise" class="nav-link">Liste des entreprises</a>
                            </li>
                            <li class="nav-item active">
                                <a href="/ajoutEntreprise" class="nav-link">J'ai un stage!</a>
                            </li>
                            <li class="nav-item">
                                <a href="/aide" class="nav-link">Aide</a>
                            </li>
                        </ul>
                    </div>

                </nav>

            </div>
        </div>
    </div>
    <div class="container">
        <section>
            <h3 class="major">Formulaire d'ajout d'un stage : </h3>
            <div class="form-group">
                {{ form_widget(form.NomEntreprise,
                    {'attr': {'class': 'form-control','placeholder': 'Nom entreprise'}}

                )}}
            </div>
            <div class="form-group">
                {{ form_widget(form.VilleEntreprise,
                    {'attr': {'class': 'form-control','placeholder': 'Ville entreprise'}}
                )}}
            </div>
            <div class="form-group">
                {{ form_widget(form.CpEntreprise,
                    {'attr': {'class': 'form-control','placeholder': 'Code entreprise'}}
                )}}
            </div>

            <br /><button class="btn btn-secondary">Suivant</button>
            {{ form_end(form) }}
        </section>
    </div>


{% endblock %}





